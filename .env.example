# Environment Configuration for OHADA Expert-Comptable
# Copy this file to .env and fill in your values

# ====================
# Environment
# ====================
OHADA_ENV=production  # test or production

# ====================
# Database
# ====================
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://ohada_user:your_secure_password_here@postgres:5432/ohada

# ====================
# Redis
# ====================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ====================
# API Keys
# ====================
OPENAI_API_KEY=sk-your-openai-key-here
DEEPSEEK_API_KEY=your-deepseek-key-here

# ====================
# JWT Authentication
# ====================
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars-random-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ====================
# Admin
# ====================
ADMIN_EMAILS=admin@ohada.com,admin2@ohada.com

# ====================
# CORS
# ====================
CORS_ORIGINS=http://localhost:3000,https://ohada.com

# ====================
# Server
# ====================
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ====================
# Monitoring (Grafana)
# ====================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# ====================
# Nginx (if using)
# ====================
DOMAIN_NAME=ohada.com
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem
